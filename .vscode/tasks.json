{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-cpp",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/src/*.cpp", 
                "-o",
                "${workspaceFolder}/src/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}